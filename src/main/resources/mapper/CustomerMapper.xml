<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhy.plateform.dao.CustomerMapper">

  <resultMap id="BaseResultMap" type="Customer" >
      <id column="id" property="id" jdbcType="INTEGER" />
      <result column="name" property="name" jdbcType="VARCHAR" />
      <result column="email" property="email" jdbcType="VARCHAR" />
      <result column="address" property="address" jdbcType="VARCHAR" />
      <result column="account" property="account" jdbcType="VARCHAR" />
      <result column="level" property="level" jdbcType="TINYINT" />
      <result column="linkUserId" property="linkUserId" jdbcType="INTEGER" />
  </resultMap>
  
  <sql id="Base_Column_List" >
      id,
      name,
      email,
      address,
      account,
      level,
      linkUserId
  </sql>
  
  <!--根据Id查询-->
  <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String" >
      select <include refid="Base_Column_List" /> from customer where id = #{id,jdbcType=INTEGER}
  </select>
  
  
  <!-- 多条件查询 -->
  <select id="findBySelective" resultMap="BaseResultMap" parameterType="com.jhy.plateform.query.CustomerQuery">
      select <include refid="Base_Column_List" /> from customer
      <trim prefix="where" prefixOverrides="and |or ">
         <if test="keyWords != null and keyWords != ''">
            <bind name="likeKeyWords" value="'%' + _parameter.keyWords + '%'" />
            and name like #{likeKeyWords,jdbcType=VARCHAR}
         </if>
         <if test="name != null and name != ''">
            and name = #{name,jdbcType=VARCHAR}
         </if>
      </trim>
      order by id DESC
  </select>
  
  
  <!-- 删除 -->
  <delete id="deleteById" parameterType="java.lang.String" >
      delete from customer where id = #{id,jdbcType=INTEGER}
  </delete>
  
  <!-- 批量删除 -->
  <delete id="deleteByIds" parameterType="java.lang.String">
      delete from customer where id in
      <foreach item="id" collection="array" open="(" separator="," close=")">
          #{id}
      </foreach>
  </delete>
  
  <!--部分字段允许为空-->
  <insert id="add" parameterType="Customer" >
    insert into customer
    <trim prefix="(" suffix=")" suffixOverrides="," >
        id,
        name,
        email,
        address,
        <if test="account != null and account != ''" >
            account,
        </if>
        level,
        <if test="linkUserId != null" >
            linkUserId
        </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
        #{id,jdbcType=INTEGER},
        #{name,jdbcType=VARCHAR},
        #{email,jdbcType=VARCHAR},
        #{address,jdbcType=VARCHAR},
        <if test="account != null and account != ''" >
            #{account,jdbcType=VARCHAR},
        </if>
        #{level,jdbcType=TINYINT},
        <if test="linkUserId != null" >
            #{linkUserId,jdbcType=INTEGER}
        </if>
    </trim>
  </insert>
  
  <!--更新--> 
  <update id="update" parameterType="Customer" >
      update customer
      <set>
          <if test="name != null and name != ''" >
              name = #{name,jdbcType=VARCHAR},
          </if>
          <if test="email != null and email != ''" >
              email = #{email,jdbcType=VARCHAR},
          </if>
          <if test="address != null and address != ''" >
              address = #{address,jdbcType=VARCHAR},
          </if>
          <if test="account != null and account != ''" >
              account = #{account,jdbcType=VARCHAR},
          </if>
          <if test="level != null" >
              level = #{level,jdbcType=TINYINT},
          </if>
          <if test="linkUserId != null" >
              linkUserId = #{linkUserId,jdbcType=INTEGER}
          </if>
      </set>
      where id = #{id,jdbcType=INTEGER}
  </update>
	
</mapper>